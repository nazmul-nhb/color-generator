{
	"compilerOptions": {
		"outDir": "./dist", // Specifies the output directory for compiled files
		"declaration": true, // Generates .d.ts files
		"declarationDir": "./dist", // Specifies the output directory for .d.ts files
		"emitDeclarationOnly": false, // (Optional) Only emit .d.ts files without JavaScript
		"target": "ES2016",
		"module": "CommonJS",
		"strict": true,
		"importHelpers": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"], // Include TypeScript files
	"exclude": ["node_modules"] // Exclude node_modules
}
